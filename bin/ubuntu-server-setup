#!/bin/sh

is_running_ubuntu() {
    version="$(cat /etc/issue 2> /dev/null)"
    if [[ $version == *"Ubuntu"* ]]; then
        true
    else
        false
    fi
}

is_executable() {
    if command -v "$1" &> /dev/null; then
        echo 0
    else
        echo 1
    fi
}

if [[ ! $(is_executable "make") ]]; then 
    if [[ ! $(is_running_ubuntu) ]]; then 
        apt install make
    else
        echo "Error: These scripts are written for Ubuntu!"
        exit
    fi
fi

cd ../ && make -s all
