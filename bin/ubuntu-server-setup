#!/bin/bash

is_running_ubuntu() {
    version="$(cat /etc/issue 2> /dev/null)"
    if [[ $version == *"Ubuntu"* ]]; then
        echo true
    else
        echo false
    fi
}

is_executable() {
    if command -v "$1" &> /dev/null; then
        echo true
    else
        echo false
    fi
}

if [[ $(is_executable "make") == false ]]; then 
    if [[ $(is_running_ubuntu) == true ]]; then 
        apt install make
    else
        echo "Error: These scripts are written for Ubuntu!"
        exit
    fi
fi

cd ../ && make -s all
